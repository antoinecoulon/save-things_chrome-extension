{
  "manifest_version": 3,
  "name": "Save Things",
  "version": "1.0",
  "short_name": "Save Things",
  "description": "Sauvegardez rapidement un lien ou une note directement depuis votre navigateur.",
  "lang": "fr",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png"
    }
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "theme_color": "#669BBC",
  "background_color": "#669BBC",
  "display": "standalone"
}
